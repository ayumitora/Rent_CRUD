<p id="notice"><%= notice %></p>

<h1>一覧</h1>
<hr>
<table>
  <thead>
    <tr>
      <th>物件名</th>
      <th>賃料</th>
      <th>住所</th>
      <th>築年数</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rent_properties.each do |rent_property| %>
      <tr>
        <td><%= rent_property.property_name %></td>
        <td><%= rent_property.rent.to_s(:delimited, delimiter: ',') %><%= "円" %></td>
        <td><%= rent_property.address %></td>
        <td><%= rent_property.age %><%= "年" %></td>
        <td><%= rent_property.note %></td>
        <td><%= link_to '詳細', rent_property %></td>
        <td><%= link_to '編集', edit_rent_property_path(rent_property) %></td>
        <td><%= link_to '削除', rent_property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '物件を登録する ', new_rent_property_path %>
